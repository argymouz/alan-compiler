main () : proc

   length (s : reference byte []) : int
      i : int;
   {
      i=0;
      while (s[i] != '\0')
         i=i+1;
      return i;
   }

   reverse (s : reference byte [], r : reference byte []) : proc
      i : int;
      l : int;
   {
      l = length(s);
      i = 0;
      while (i < l) {
         r[i] = s[l-i-1];
         i=i+1;
      }
      r[i] = '\0';
   }

   p : byte [20];

{
   reverse("\n!dlrow olleH", p);
   writeString(p);
}
